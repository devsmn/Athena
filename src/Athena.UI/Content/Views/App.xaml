<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:androidSpecific="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:local="clr-namespace:Athena.UI"
             androidSpecific:Application.WindowSoftInputModeAdjust="Resize"
             x:Class="Athena.UI.App">
    <Application.Resources>
        <x:Static x:Key="BannerAdUnitId" Member="local:SecretConfig.BannerAdUnitId" />
        <x:Static x:Key="InterstitialAdUnitId" Member="local:SecretConfig.InterstitialAdUnitId" />
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="../../Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--<local:FolderOverviewViewModel x:Key="MainContext"/>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
