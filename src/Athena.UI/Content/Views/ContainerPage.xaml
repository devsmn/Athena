<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Athena.UI.ContainerPage"
            xmlns:local="clr-namespace:Athena.UI"
            xmlns:loc="clr-namespace:Athena.Resources.Localization"
            android:TabbedPage.IsSwipePagingEnabled="False"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom" >
    <NavigationPage Title="Home" 
                    IconImageSource="home.png">
        <x:Arguments>
            <local:HomeView NavigationPage.HasNavigationBar="False"  />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="{x:Static loc:Localization.Search}" IconImageSource="search.png" >
        <x:Arguments>
            <local:SearchOverviewView NavigationPage.HasNavigationBar="False"   />
        </x:Arguments>
    </NavigationPage>

    <local:TagsOverview Title="{x:Static loc:Localization.Tags}" IconImageSource="tag.png"   />
    <local:SettingsView Title="{x:Static loc:Localization.Settings}" IconImageSource="settings.png" />

</TabbedPage>
