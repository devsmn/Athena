<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Athena.UI.DocumentEditorCommentStep">

    <VerticalStackLayout
        HorizontalOptions="Center">

        <Label Text="Enter a comment" 
               Margin="3" 
               HorizontalTextAlignment="Center"
               FontAttributes="Bold"
               FontSize="Title"/>

        <Label Text="This comment is optional and may contain additional information about this page"
               HorizontalTextAlignment="Center"
               Margin="3"/>

        <Entry Placeholder="Comment" 
               Text="{Binding Document.Comment}" 
               Margin="3"/>
    </VerticalStackLayout>
</ContentView>
